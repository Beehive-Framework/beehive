{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
    "paths": {
      "/@/*": ["src/*"],
      "/@u/*": ["src/utils/*"],
      "/#/*": ["types/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "libs/**/*.ts",
    "libs/**/*.d.ts",
    "libs/**/*.vue",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
